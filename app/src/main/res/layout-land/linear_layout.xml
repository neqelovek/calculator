<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_black"
    android:orientation="vertical">


    <TextView
        android:id="@+id/field_calc_result"
        style="@style/StyleTextButtonResult"
        android:textSize="@dimen/size_string_numbers_result" />

    <TextView
        android:id="@+id/field_operation"
        style="@style/StyleTextButtonResult" />

    <TextView
        android:id="@+id/field_numbers"
        style="@style/StyleTextButtonResult" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/plus_button"
            style="@style/CalcButtonActionStyle"
            android:text="@string/plus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/minus_button"
            style="@style/CalcButtonActionStyle"
            android:text="@string/minus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/to_share_button"
            style="@style/CalcButtonActionStyle"
            android:text="@string/to_share" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/multiply_button"
            style="@style/CalcButtonActionStyle"
            android:text="@string/multiply" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seven_button"
            style="@style/CalcButtonNumbersStyle"
            android:text="@string/seven" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eight_button"
            style="@style/CalcButtonNumbersStyle"
            android:text="@string/eight" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nine_button"
            style="@style/CalcButtonNumbersStyle"
            android:text="@string/nine" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clean_button"
            style="@style/CalcButtonActionStyle"
            android:text="@string/clean" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/four_button"
            style="@style/CalcButtonNumbersStyle"
            android:text="@string/four" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/five_button"
            style="@style/CalcButtonNumbersStyle"
            android:text="@string/five" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/six_button"
            style="@style/CalcButtonNumbersStyle"
            android:text="@string/six" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero_button"
            style="@style/CalcButtonNumbersStyle"
            android:text="@string/zero" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/first_button"
            style="@style/CalcButtonNumbersStyle"
            android:text="@string/one" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/two_button"
            style="@style/CalcButtonNumbersStyle"
            android:text="@string/two" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/three_button"
            style="@style/CalcButtonNumbersStyle"
            android:text="@string/three" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/equally_button"
            style="@style/CalcButtonNumbersStyle"
            android:layout_width="0dp"
            android:backgroundTint="@color/color_equally"
            android:text="@string/equally" />

    </LinearLayout>
</LinearLayout>
